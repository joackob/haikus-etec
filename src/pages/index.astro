---
import BgAtomic from "@backgrounds/mock-bg-atomic-tangerine/index.astro";
import BgDelft from "@backgrounds/mock-bg-delft-blue/index.astro";
import "../styles/global.css";

const bgs = [BgAtomic, BgDelft];
---

<!doctype html>
<html lang="es">
  <head>
    <title>haikus-etec</title>
  </head>
  <body>
    <div
      class="bg-burnt_sienna h-screen snap-mandatory snap-y overflow-y-scroll"
    >
      {
        bgs.map((Bg) => (
          <div class="snap-start h-full snap-always">
            <Bg />
          </div>
        ))
      }
    </div>
  </body>
</html>
